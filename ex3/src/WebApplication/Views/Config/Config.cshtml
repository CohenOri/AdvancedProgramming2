@model WebApplication.Models.Settings
@{
    ViewBag.Title = "Config";
}

<h2>Config</h2>
    Welcome to config!!!!
<td><p type="text" id="status" size="10">@ViewBag.message</p></td>

<table class="table-bordered">
    <tr bgcolor="#52A5D5">
        <th>
            @Html.DisplayNameFor(model => model.SrcName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThumbNail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutPutDur)
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.SrcName)
        </td>
        <td>
            @Html.DisplayFor(model => model.LogName)
        </td>
        <td>
            @Html.DisplayFor(model => model.ThumbNail)
        </td>
        <td>
            @Html.DisplayFor(model => model.OutPutDur)
        </td>
    </tr>
</table>


<td><p type="text" id="handlerslist" size="40">Handler List</p></td>

<div class="btn-group-vertical">
    For brave people: to delete a handler click on one of them.
    @{ var i = 0;
        if (Model.Handlers.Count() != 0)
        {
            foreach (var handler in Model.Handlers)
            {//create linked
            <a href="@Url.Action("Delete", "Config", new { path = handler })" class="btn btn-info btn-lg" role="button">
                @Html.DisplayFor(modelItem => handler)
            </a>
                    i++;
                }

            }
        }
</div>
